{% extends isXmlHttpRequest ? 'layout_minimum.html.twig' : 'layout_standard.html.twig' %}

{% block title %}
    {% if (form.vars.data.id) %}{{ 'financial.transfer.title.edit'|trans }}{% else %}{{ 'financial.transfer.title.new'|trans }}{% endif %}
{% endblock title %}

{% block container %}

    {% if not isXmlHttpRequest %}
        <h2>{% if (form.vars.data.id) %}{{ 'financial.transfer.title.edit'|trans }}{% else %}{{ 'financial.transfer.title.new'|trans }}{% endif %}</h2>
        <div class="card">
            <div class="card-body">
    {% endif %}

    <div class="small">
        {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-6">
                    {{ form_label(form.accountFrom, 'financial.transfer.field.account_from') }}
                    {{ form_widget(form.accountFrom, {
                        'attr': {
                            'autocomplete': 'off',
                            'class': 'form-control-sm js-datepicker'
                        }
                    }) }}
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.accountTo, 'financial.transfer.field.account_to') }}
                    {{ form_widget(form.accountTo, {
                        'attr': {
                            'autocomplete': 'off',
                            'class': 'form-control-sm js-datepicker'
                        }
                    }) }}
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.date, 'financial.transfer.field.date') }}
                    {{ form_widget(form.date, {
                        'attr': {
                            'autocomplete': 'off',
                            'class': 'form-control-sm js-datepicker'
                        }
                    }) }}
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.amount, 'financial.transfer.field.amount') }}
                    {{ form_widget(form.amount, {
                        'group_class': ' input-group-sm',
                        'attr': {
                            'autocomplete': 'off',
                            'class': 'form-control-sm'
                        }
                    }) }}
                </div>
            </div>
            {% if form.back is defined %}
                {{ form_widget(form.back, {
                    'label': 'generic.action.back',
                    'attr': {
                        'class': 'btn-secondary btn-sm',
                        'onclick': ppboxRedirect(path('financial_transaction'))
                    }
                }) }}
            {% endif %}
            {% if form.save is defined %}
                {{ form_widget(form.save, {
                    'label': 'generic.action.save',
                    'attr': {
                        'class': 'btn-primary btn-sm'
                    }
                }) }}
            {% endif %}
        {{ form_end(form) }}
    </div>

    {% if not isXmlHttpRequest %}
        </div>
    </div>
    {% endif %}

{% endblock container %}
