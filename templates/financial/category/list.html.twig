{% extends 'layout_standard.html.twig' %}

{% block title %}
{% endblock title %}

{% block container %}

    {% include 'flashbag.html.twig' %}

    <div id="financial-category-list">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link {% if (tab is not defined or tab == 'credit') %}active{% endif %}" id="home-tab" data-toggle="tab" href="#credit" role="tab" aria-controls="credit" aria-selected="true">
                    {{ 'financial.category.title.credit'|trans }}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if (tab is defined and tab == 'debit') %}active{% endif %}" id="profile-tab" data-toggle="tab" href="#debit" role="tab" aria-controls="debit" aria-selected="false">
                    {{ 'financial.category.title.debit'|trans }}
                </a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade tab-pane-credit {% if (tab is not defined or tab == 'credit') %}show active{% endif %}" id="credit" role="tabpanel" aria-labelledby="credit-tab">
                <button type="button" class="btn btn-sm btn-primary" onclick="{{ ppboxRedirect(path('financial_category_new', {'type': 'credit'})) }}">
                    <span class="oi oi-play-circle"></span> {{ 'financial.category.action.new.credit'|trans }}
                </button><br/><br/>
                {% include 'financial/category/category.html.twig' with {'categories': categoriesCredit} %}
            </div>
            <div class="tab-pane fade tab-pane-credit {% if (tab is defined and tab == 'debit') %}show active{% endif %}" id="debit" role="tabpanel" aria-labelledby="debit-tab">
                <button type="button" class="btn btn-sm btn-primary" onclick="{{ ppboxRedirect(path('financial_category_new', {'type': 'debit'})) }}">
                    <span class="oi oi-play-circle"></span> {{ 'financial.category.action.new.debit'|trans }}
                </button><br/><br/>
                {% include 'financial/category/category.html.twig' with {'categories': categoriesDebit} %}
            </div>
        </div>
    </div>
{% endblock container %}

{% block javascripts %}
    <script src="{{ asset('js/financial/category/list.js') }}"></script>
{% endblock javascripts %}